<?xml version="1.0" encoding="utf-8"?>
<com.rider.democube.common.Common01AdjustablePanel xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/parentLayout"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:background="#2B2B2B">

        <com.rider.democube.practice.Practice01SquareImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/coder" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="外框调节"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatSeekBar
                    android:id="@+id/widthBar"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"/>


                <TextView
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="width"
                    android:textSize="16sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/heightBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatSeekBar
                    android:id="@+id/heightBar"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="height"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</com.rider.democube.common.Common01AdjustablePanel>